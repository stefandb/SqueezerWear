<resources>

    <!-- Base application theme.
    Theme.AppCompat-->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>


    <!-- Text Styles -->
    <style name="SqueezerTextItem" parent="@android:style/TextAppearance.Medium">
    </style>
    <style name="SqueezerCurrentTextItem" parent="style/SqueezerTextItem">
    </style>
    <style name="SqueezerTextItemSmall" parent="@android:style/TextAppearance.Small">
    </style>
    <style name="SqueezerCurrentTextItemSmall" parent="style/SqueezerTextItemSmall">
    </style>

    <!-- Media controller styles -->
    <style name="MediaButton">
        <item name="android:background">@drawable/list_selector_holo_dark</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">52dip</item>
    </style>

    <style name="MediaButton.Previous">
        <item name="android:src">@drawable/ic_action_previous</item>
    </style>

    <style name="MediaButton.Next">
        <item name="android:src">@drawable/ic_action_next</item>
    </style>

    <style name="MediaButton.Play">
        <item name="android:src">@drawable/ic_action_play</item>
    </style>

    <style name="MediaButton.Shuffle">
        <item name="android:src">@drawable/btn_shuffle_off</item>
    </style>

    <style name="MediaButton.Repeat">
        <item name="android:src">@drawable/btn_repeat_off</item>
    </style>

    <style name="VolumePanel" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/VolumeDialogAnimation</item>
    </style>

    <style name="VolumeDialogAnimation">
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
